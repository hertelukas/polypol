<%- include("./partials/header") %>

<div class="container">
    <div class="form text-center">
        <form id="login" action="/users/authenticate" method="POST">
            <h1>Login</h1>
            <div class="form-group">
                <input class="form-control" type="text" name="username" id="mail" placeholder="Username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="d-none d-md-block btn btn-block btn-outline-light">Login</button>
            <button type="submit" class="d-md-none btn btn-block btn-outline-dark">Login</button>
        </form>
        <a href="/forgot" class="d-none d-md-block btn btn-outline-light btn-sm">Forgot Password</a>
        <a href="/forgot" class="d-md-none btn btn-outline-dark btn-sm">Forgot Password</a>
        <a href="/register" class="d-none d-md-block btn btn-outline-light btn-sm">Register</a>
        <a href="/register" class="d-md-none btn btn-outline-dark btn-sm">Register</a>
    </div>
</div>


<div class="footer d-flex justify-content-center">
    <a href="/contact">Contact</a>
    <a href="/privacy">Privacy</a>
    <a href="/terms">Terms</a>
</div>



